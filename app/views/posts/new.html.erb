<%= render "shared_form/navbar" %>
<div class="container" style="margin-top: 100px">
  <h1><b>Create Post</b></h1>
  <div class="card w-100 mt-3 mb-5 shadow border-light">
    <div class="card-body bg-light">
      <%= form_for @post, url: posts_path, method: :post do |f| %>
        <div class="row mt-3">
          <%= render "form", f: f %>
          <div class="pt-1 text-center mb-2">
            <%= link_to 'Back', posts_path, class: "btn btn-warning px-5 mx-3 shadow-sm" %>
            <%= f.submit "Post", data: { confirm: 'Are you sure you want to post?' }, class: "btn btn-success px-5 mx-3 shadow-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>