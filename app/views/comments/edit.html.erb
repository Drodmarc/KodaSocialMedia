<%= render "shared_form/navbar" %>
<div class="container" style="margin-top: 100px">
  <h3 class="text-light"><b>Edit Comment</b></h3>
  <div class="card w-100 mt-3 mb-5 shadow border-light" style="background-color: #e4ede4">
    <div class="card-body ">
      <%= form_for @comment, url: post_comment_path, method: :patch do |f| %>
        <div class="row mt-3">
          <div class="col">
            <div class="form-outline mb-4">
              <%= f.text_area :content, class: "form-control shadow-sm shadow-sm border-light", placeholder: "Write a comment...", :cols => 20, :rows => 1 %>
              <%= content_tag :p, @comment.errors.full_messages_for(:content).join(', '), class: 'text-danger' if @comment.errors.has_key?(:content) %>
            </div>
          </div>
          <div class="pt-1 text-center mb-2">
            <%= link_to 'Back', post_comments_path, class: "btn btn-warning px-5 mx-3 shadow-sm" %>
            <%= f.submit "Update", data: { confirm: 'Are you sure you want to Update?' }, class: "btn btn-success px-5 mx-3 shadow-sm" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>